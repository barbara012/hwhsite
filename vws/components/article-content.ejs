<div class="article-content">
  <h1><a class="article_title" href="<%- article.path +  article._id %>"><%= article.title %></a></h1>
  <div class="article_other-info">
    <a href="javascript:;" class="article_avatar"><%- article.author.substr(0,1) %></a>
    <a class="article_author" href="javascript:;"><span class="author-tag">作者</span><%= article.author %></a>
    <span class="article_date"><%= article.created_at %></span>
    <span class="disclaimer"><%= disclaimer %></span>
  </div>
  <div class="article_content"><%- article.content %></div>
  <% if (article.tag.length > 0) {%>
  <div class="article_tags">
    <% article.tag.forEach(function(tg){ %>
    <span class="article_tag"><%= tg %></span>
    <% }) %>
  </div>
  <% } %>
</div>
<%- include('./comments')%>
