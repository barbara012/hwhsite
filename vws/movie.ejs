<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= movie.title %></title>
    <link rel="stylesheet" href="/dist/css/app.css">
  </head>
<body>
  <div class="app app-movie-page">
    <%- include('components/nav') %>
    <div class="app-main">
      <div class="page-content">
        <h1><a class="article_title" href="/<%= articleType %>/<%= movie._id %>"><%- movie.name %></a></h1>
        <div class="article_content">
          <%- movie.content %>
          <div class="download-link">
            <%= movie.download %>
          </div>
        </div>
      </div>
      <%- include('components/back-top')%>
    </div>
    <%- include('components/footer') %>
  </div>
</body>
</html>